{
  "private": true,
  "name": "@pigeon-and-beacon/games-api",
  "version": "0.0.1",
  "description": "work in progress",
  "type": "module",
  "engines": {
    "node": ">=18.2.0"
  },
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "xo",
    "test": "jest",
    "coverage": "npm run test -- --coverage",
    "db:migration:create": "ts-node --project ./tsconfig.json --esm db/umzug.ts create",
    "db:migrate": "ts-node --project ./tsconfig.json --esm db/umzug.ts up",
    "db:migrate:undo": "ts-node --project ./tsconfig.json --esm db/umzug.ts down",
    "db:create": "ts-node --project ./tsconfig.json --esm db/create-database.ts",
    "db:drop": "ts-node --project ./tsconfig.json --esm db/drop-database.ts",
    "db:regenerate": "npm run db:drop && npm run db:create && npm run db:migrate",
    "db:test:migrate": "NODE_ENV=test ts-node --project ./tsconfig.json --esm db/umzug.ts up",
    "db:test:migrate:undo": "NODE_ENV=test ts-node --project ./tsconfig.json --esm db/umzug.ts down",
    "db:test:create": "NODE_ENV=test ts-node --project ./tsconfig.json --esm db/create-database.ts",
    "db:test:drop": "NODE_ENV=test ts-node --project ./tsconfig.json --esm db/drop-database.ts",
    "db:test:regenerate": "NODE_ENV=test npm run db:test:drop && npm run db:test:create && npm run db:test:migrate"
  },
  "author": "Thomas Cholley <cholley.t@gmail.com>",
  "devDependencies": {
    "@nestjs/cli": "^10.1.7",
    "@nestjs/schematics": "^10.0.1",
    "@nestjs/testing": "^10.0.5",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^18.16.19",
    "@types/passport": "^1.0.12",
    "@types/passport-jwt": "^3.0.8",
    "@types/passport-local": "^1.0.35",
    "@types/pg": "^8.10.2",
    "@types/supertest": "^2.0.12",
    "jest": "^29.6.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "xo": "^0.54.2"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.5",
    "@nestjs/core": "^10.0.5",
    "@nestjs/jwt": "^10.1.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^10.0.5",
    "@nestjs/swagger": "^7.1.1",
    "argon2": "^0.30.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.3.1",
    "envalid": "^7.3.1",
    "express": "^4.18.2",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.11.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "umzug": "^3.2.1"
  }
}
