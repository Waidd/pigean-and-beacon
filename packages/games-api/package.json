{
  "private": true,
  "name": "@pigeon-and-beacon/games-api",
  "version": "0.0.0",
  "description": "work in progress",
  "type": "module",
  "engines": {
    "node": ">=18.2.0"
  },
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "xo",
    "test": "jest",
    "coverage": "npm run test -- --coverage",
    "db:migration:create": "ts-node --project ./tsconfig.json --esm db/umzug.ts create",
    "db:migrate": "ts-node --project ./tsconfig.json --esm db/umzug.ts up",
    "db:migrate:undo": "ts-node --project ./tsconfig.json --esm db/umzug.ts down"
  },
  "author": "Thomas Cholley <cholley.t@gmail.com>",
  "devDependencies": {
    "@nestjs/cli": "^9.4.2",
    "@nestjs/schematics": "^9.1.0",
    "@nestjs/testing": "^9.4.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.15.12",
    "@types/pg": "^8.6.6",
    "jest": "^29.5.0",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "xo": "^0.54.1"
  },
  "dependencies": {
    "@nestjs/common": "^9.4.0",
    "@nestjs/core": "^9.4.0",
    "@nestjs/platform-express": "^9.4.0",
    "argon2": "^0.30.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "pg": "^8.10.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "umzug": "^3.2.1"
  }
}
